        <developer>
            <name>Joshua Hartjes</name>
            <email>kaitokuntatsu@gmail.com</email>
            <organization>io.github.kaitokuntatsu</organization>
            <organizationUrl>https://github.com/KaitoKunTatsu/</organizationUrl>
        </developer>
    </developers>

    <dependencies>
        <dependency>
            <groupId>org.json</groupId>
            <artifactId>json</artifactId>
            <version>20220924</version>
        </dependency>
        <dependency>
            <groupId>org.xerial</groupId>
            <artifactId>sqlite-jdbc</artifactId>
            <version>3.39.4.1</version>
        </dependency>
    </dependencies>
</project>